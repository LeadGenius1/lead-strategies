# AI Lead Strategies Backend - Environment Template
# Copy to .env and fill in values

# Required (add ?connection_limit=20 for production scale)
DATABASE_URL=postgresql://user:pass@host:5432/dbname
JWT_SECRET=your-jwt-secret-change-in-production

# Auth (Google OAuth sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional - Redis (falls back to in-memory rate limit)
REDIS_URL=redis://localhost:6379

# Optional - Rate limit (default 300/15min; increase for high-traffic)
# RATE_LIMIT_MAX=500

# Optional - Feature-specific
# Stripe (add after Stripe Dashboard setup: https://dashboard.stripe.com)
# STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# STRIPE_PUBLISHABLE_KEY=pk_live_xxx (frontend)

# LeadSite.AI email (Mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Lead Hunter / Copilot AI (required for Lead Hunter chat)
# Railway: Add ANTHROPIC_API_KEY in project Variables
ANTHROPIC_API_KEY=

# Apollo.io - lead/company data (optional, for lead discovery)
# APOLLO_API_KEY=

# UltraLead AI agents
OPENAI_API_KEY=

# ClientContact social channels
META_APP_ID=
META_APP_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# OAuth callbacks base URL (for Facebook/Twitter redirect URIs)
BACKEND_URL=http://localhost:3001
# Production: BACKEND_URL=https://api.aileadstrategies.com
